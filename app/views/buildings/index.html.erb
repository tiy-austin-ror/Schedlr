
<h1>Listing Buildings</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Site</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @buildings.each do |building| %>
        <tr>
          <td><%= building.name.titleize %></td>
          <td><%= building.street.titleize %></td>
          <td><%= building.city.titleize %></td>
          <td><%= building.state.titleize %></td>
          <td><%= building.zip %></td>
          <td><%= building.site.name.titleize %></td>
          <td><%= link_to 'Show', building, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_building_path(building), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Building', new_building_path %>
<%= paginate @buildings %>
