
<h1>Listing Rooms Admin View</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name.titleize %></td>
        <td><%= room.capacity %></td>
        <td><%= room.building.titleize %></td>
        <td><%= link_to 'Show', room, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_room_path(room), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

