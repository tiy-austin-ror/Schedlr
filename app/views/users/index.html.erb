
<h1>Listing Users</h1>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Department</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name.titleize %></td>
            <td><%= user.last_name.titleize %></td>
            <td><%= user.email %></td>
            <td><%= user.department.titleize %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
