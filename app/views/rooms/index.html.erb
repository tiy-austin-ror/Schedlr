<div class="container">
  <h1>Rooms Directory</h1>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Capacity</th>
          <th>Building</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><p class="text-capitalize"><%= room.name %></p></td>
            <td><%= room.capacity %></td>
            <td><p class="text-capitalize"><%= room.building.name %></p></td>
            <td><%= link_to 'Show', room %></td>
            <td><%= link_to 'Edit', edit_room_path(room) %></td>
            <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  <br>

<%= link_to 'New Room', new_room_path %>
